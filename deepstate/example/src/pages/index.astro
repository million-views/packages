---
import { TodoList } from "@components/TodoList.jsx";
import Layout from "@layouts/Layout.astro";

/// This could be global, per user or per request
/// global:
///  - perhaps load from a file
/// per user:
///  - use some session based identification to read user specific data
///
/// per request:
///  - typical middleware stuffs something into .local
///
/// The only constraint is that this data should be JSON serializable
const initial = {
  title: "Live well and prosper",
  draft: "",
  todos: [
    { id: 1, text: "Weed front garden.", completed: true },
    { id: 2, text: "Chill and smoke some Old Toby.", completed: true },
    { id: 3, text: "Keep ring secret and safe.", completed: false },
    { id: 4, text: "Meet Gandalf at Bree.", completed: false },
    { id: 5, text: "Destroy ring and defeat dark lord.", completed: false },
  ],
};
---

<Layout>
  <!-- <div class="container mx-auto py-8">
    <TodoList client:load {initial} />
  </div> -->
  <div>
    <h1 class="text-sm text-center font-medium text-gray-700">
      Examples using DeepState
    </h1>
    <ul
      role="list"
      class="mt-3 grid grid-cols-1 gap-5 sm:grid-cols-2 sm:gap-6 lg:grid-cols-3"
    >
      <li class="col-span-1 flex rounded-md shadow-xs">
        <div
          class="flex flex-1 items-center justify-center px-4 py-2 truncate rounded-l-md rounded-r-md border-t border-r border-b border-gray-200 bg-white"
        >
          <a
            href="/counter"
            class="font-medium text-gray-900 hover:text-gray-600">Counter</a
          >
        </div>
      </li>
      <li class="col-span-1 flex rounded-md shadow-xs">
        <div
          class="flex flex-1 items-center justify-center px-4 py-2 truncate rounded-l-md rounded-r-md border-t border-r border-b border-gray-200 bg-white"
        >
          <a
            href="/reactive"
            class="font-medium text-gray-900 hover:text-gray-600"
            >Reactive Counter</a
          >
        </div>
      </li>
      <li class="col-span-1 flex rounded-md shadow-xs">
        <div
          class="flex flex-1 items-center justify-center px-4 py-2 truncate rounded-l-md rounded-r-md border-t border-r border-b border-gray-200 bg-white"
        >
          <a
            href="/context"
            class="font-medium text-gray-900 hover:text-gray-600"
            >Counter with Context</a
          >
        </div>
      </li>
      <li class="col-span-1 flex rounded-md shadow-xs">
        <div
          class="flex flex-1 items-center justify-center px-4 py-2 truncate rounded-l-md rounded-r-md border-t border-r border-b border-gray-200 bg-white"
        >
          <a
            href="/search"
            class="font-medium text-gray-900 hover:text-gray-600">Search</a
          >
        </div>
      </li>
      <li class="col-span-1 flex rounded-md shadow-xs">
        <div
          class="flex flex-1 items-center justify-center px-4 py-2 truncate rounded-l-md rounded-r-md border-t border-r border-b border-gray-200 bg-white"
        >
          <a
            href="/search-autocomplete"
            class="font-medium text-gray-900 hover:text-gray-600"
            >Search With AutoComplete</a
          >
        </div>
      </li>
    </ul>
  </div>
</Layout>
